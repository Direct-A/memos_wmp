/* pages/edit/index.wxss */
page {
  min-height: 100%;
  overflow: scroll;
}

.tagsList {
  position: absolute;
  top: -80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  overflow: scroll;
  background-color: #07c160;
  width: calc(100% - 60rpx);
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  z-index: -1;
}

.tagsList::-webkit-scrollbar {
  display: none; /* Chrome Safari */
}

.tag {
  padding: 10rpx 20rpx;
  background-color: #ffffff;
  margin: 0 10rpx;
  border-radius: 50rpx;
  flex-shrink: 0;
  font-size: 27rpx;
  color: #07c160;
}

.memoEditTextarea {
  padding: 20rpx;
  height: 230px;
  width: 100%;
  font-size: 16px;
  background-color: #ffffff30;
  border-top: 1rpx solid #00000010;
  border-bottom: 1rpx solid #00000010;
  animation-duration: 500ms;
}

.btns {
  transition: 200ms;
  background-color: #ffffff;
  border-top: 1rpx solid #00000010;
  padding-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  padding-bottom: 40px;
}

.inputTypeBtn {
  margin-left: 50rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.typeBtn {
  position: relative;
  width: 76rpx;
  height: 48rpx;
  background-size: cover;
}

.flex {
  display: flex;
  align-items: center;
}

.keyBoardDownBtn {
  margin-right: 20rpx;
  background-image: url(data:image/svg+xml;base64,);
}

.todoBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.fileBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.fileNum {
  color: #cccccc;
}

.fullScrBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.tagBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.codeBtn {
  background-image: url(data:image/svg+xml;base64,);
}

