/* pages/edit/index.wxss */
page {
  min-height: 100%;
  overflow: scroll;
}

.memoEditTextarea {
  margin: 40rpx;
  padding: 20rpx;
  height: 300px;
  width: calc(100% - 120rpx);
  font-size: 16px;
  padding-bottom: 5rpx;
  background-color: #ffffff30;
  border: 1rpx solid #00000010;
  border-radius: 20rpx;
}

.btns {
  transition: 200ms;
  background-color: #ffffff80;
  backdrop-filter: blur(100px);
  padding-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  padding-bottom: 40px;
}

.inputTypeBtn {
  margin-left: 50rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.typeBtn {
  width: 76rpx;
  height: 48rpx;
  background-size: cover;
}

.todoBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.fullScrBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.tagBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.codeBtn {
  background-image: url(data:image/svg+xml;base64,);
}