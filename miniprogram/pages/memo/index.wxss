/* pages/memo/index.wxss */

.tip {
  padding: 20rpx 20rpx;
  margin: 0rpx 30rpx;
  border-radius: 10rpx;
  color: #07c160;
  background-color: #07c16010;
  font-size: 30rpx;
}

.nothing {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30%;
  margin: 30% auto;
  animation: show 2s ease-in-out alternate-reverse infinite;
}

.face {
  width: 200rpx;
  height: 200rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-size: cover;
  margin-bottom: 30rpx;
}

.shareBtn {
  position: fixed;
  bottom: 150rpx;
  right: 50rpx;
  background-color: #ffffff50;
  backdrop-filter: blur(30px);
  display: flex;
  width: fit-content!important;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
}

.shareIcon {
  width: 40rpx;
  height: 30rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-size: contain;
  background-repeat: no-repeat;
}

@import 'index-wxa-auto-dark.wxss'