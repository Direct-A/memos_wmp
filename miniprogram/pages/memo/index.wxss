/* pages/memo/index.wxss */

.tip {
  margin: 0;
  border-radius: 30rpx 30rpx 0 0;
}

.memoCard {
  border-bottom: none;
}

.nothing {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30%;
  margin: 30% auto;
  animation: show 2s ease-in-out alternate-reverse infinite;
}

.face {
  width: 200rpx;
  height: 200rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-size: cover;
  margin-bottom: 30rpx;
}

.shareBtn {
  position: fixed;
  bottom: 150rpx;
  right: 50rpx;
  background-color: #ffffff;
  border: 1rpx solid #cccccc;
  display: flex;
  width: fit-content!important;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
}

.shareIcon {
  width: 40rpx;
  height: 30rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-size: contain;
  background-repeat: no-repeat;
}

@import 'index-wxa-auto-dark.wxss'