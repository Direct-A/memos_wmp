<view class="headerContainer" style="top: {{top_btn.top}}px">
  <view class="header" style="height:{{top_btn.height}}px;">{{language.resource.pageTitle}}
  </view>
  <view class="uploadBtn" style="height:{{top_btn.height}}px;" bindtap="pickImg">上传</view>
</view>


<view class="resource" wx:key="resources" wx:for="{{resources}}" wx:for-item="resource" bindtap="selectFile" bindtouchstart="setTouchStart" bindtouchmove="showMethod" data-index="{{index}}" style=" border-width: {{resource.select ? '10rpx' : '0rpx'}};">
  <view wx:if="{{resource.type[0] + resource.type[1] == 'im'}}" class="icon imgIcon"></view>
  <view wx:else class="icon fileIcon"></view>
  <view class="info">
    <view class="fileName">
      {{resource.filename}}
    </view>
    <view class="other">
      <view>
        {{resource.time}}
      </view>
      <view>
        {{resource.sizeFomate === "0 B" ? 'UNKNOWN' : resource.sizeFomate}}
      </view>
    </view>
  </view>
  <view class="method" style="transform: translateX({{resource.showMethod ? '0' : '300rpx'}});">
    <text wx:if="{{resource.type[0] + resource.type[1] == 'im'}}" class="btn preview" data-index="{{index}}" catchtap="previewImg"></text>
    <text class="btn delete" data-id="{{resource.id}}" data-linkedMemoAmount="{{resource.linkedMemoAmount}}" catchtap="deleteResource"></text>
    <text class="btn link" data-index="{{index}}" catchtap="copyLink"></text>
  </view>
</view>

<view class="total">
  已加载{{resources.length}}个～
</view>

<view wx:if="{{selectMode}}" class="backEditBtn" bindtap="backEdit">
  <view>
    确认
  </view>
  已选择{{selectFileId.length}}个
</view>