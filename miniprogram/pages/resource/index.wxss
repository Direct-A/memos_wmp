.backEditBtn {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  background-color: #09c160;
  color: #ffffff50;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.backEditBtn view {
  color: #ffffff;
  font-size: 35rpx;
  font-weight: bold;
}

.method {
  margin-left: auto;
  right: 20rpx;
  transition: 500ms;
  flex-shrink: 0;
  border-radius: 20rpx;
  backdrop-filter: blur(50px);
  padding: 20rpx 20rpx 20rpx 0rpx;
  margin-bottom: 20rpx;
}

.total {
  text-align: center;
  padding: 50rpx;
  margin-bottom: 50rpx;
}

.resource .icon {
  width: 50rpx;
  height: 50rpx;
  margin: 20rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}

.resource .imgIcon {
  background-image: url(data:image/svg+xml;base64,);
}

.resource .fileIcon {
  background-image: url(data:image/svg+xml;base64,);
}

.method .btn {
  width: 70rpx;
  height: 70rpx;
}

.resource {
  border-left: 0rpx solid #09c160;
  margin: 10rpx 30rpx;
  padding: 20rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  transition: 500ms;
  overflow: hidden;
  position: relative;
  background-color: #ffffff;
  border-radius: 20rpx;
}

.fileId {
  flex-shrink: 0;
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 1rpx solid #00000010;
  color: #09c160;
}

.info {
  width: 100%;
}

.info .fileName {
  font-size: 35rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  max-width: 400rpx;
  margin-bottom: 10rpx;
}

.info .other {
  display: flex;
  gap: 20rpx;
  color: #00000050;
  font-size: 26rpx;
  padding-bottom: 20rpx;
}

.headerContainer {
  align-items: center;
  display: flex;
  position: sticky;
  margin: 90rpx 60rpx 30rpx 50rpx;
  z-index: 5;
  width: calc(100% - 100rpx);
}

.header {
  display: flex;
  align-items: center;
  color: #000000;
  font-weight: bolder;
  background: #f5f5f580;
  backdrop-filter: blur(30px);
  padding: 5rpx 20rpx;
  border-radius: 99rpx;
  opacity: 0;
  animation: show 300ms 100ms forwards;
}

.headerContainer .uploadBtn {
  padding: 0 30rpx;
  border-radius: 999px;
  background-color: #ffffff;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

